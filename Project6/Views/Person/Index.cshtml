@using Microsoft.AspNetCore.Identity
@using Project6.Models;
<link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
@model IEnumerable<Project6.Models.Person>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> BillenniumSquad</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-area="" asp-controller="Person" asp-action="Create" title="Create">Add New Person to Squad</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        Sex
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td width="30%">@person.Name</td>
                        <td width="30%">@person.Position</td>
                        <td width="10%">@person.Sex</td>
                        <td width="30%">
                            <div class="col-6 text-right">
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="Person" asp-action="Update" asp-route-Id="@person.Id" class="btn btn-primary mx-1">Update</a>
                                    <a asp-controller="Person" asp-action="Delete" asp-route-Id="@person.Id" class="btn btn-danger mx-1">Delete</a>
                                </div>
                             </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>
